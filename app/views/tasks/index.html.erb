<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<h1><%= @role %></h1>

<table>
  <thead>
    <tr>
      <th>Spree products</th>
      <th>Notified</th>
      <th>Sent</th>
      <th>Recieved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.spree_products_id %></td>
        <td><%= task.notified %></td>
        <td><%= task.sent %></td>
        <td><%= task.recieved %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
