<p id="notice"><%= notice %></p>

<h1>Tasks</h1>
<h1><%= @role %></h1>
<%= link_to "Log Out", spree_logout_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>Spree products</th>
      <th>Quantity</th>
      <th>Notified</th>
      <th>Sent</th>
      <th>Recieved</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <% if !task.recieved %>
        <tr>
        <td><%= task.spree_products_id %></td>
        <td><%= task.quantity %></td>
        <td><%= task.notified %></td>
        <td><%= task.sent %></td>
        <td><%= task.recieved %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <% if @role === "admin" %>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>

<br>

<% if @role === "admin" %>
  <%= link_to 'New Task', new_task_path %>
<%end%>


