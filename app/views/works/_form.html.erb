
<%= simple_form_for(@work) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :type %>
    <%= f.input :code %>
    <%= f.input :location %>
    <%= f.input :days %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
