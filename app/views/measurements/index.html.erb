<p id="notice"><%= notice %></p>

<h1>Measurements</h1>

<table>
  <thead>
    <tr>
      <th>Spree users</th>
      <th>Height</th>
      <th>Weight</th>
      <th>Shirt</th>
      <th>Pants</th>
      <th>Shoes</th>
      <th>Bodies</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.spree_users_id %></td>
        <td><%= measurement.height %></td>
        <td><%= measurement.weight %></td>
        <td><%= measurement.shirt %></td>
        <td><%= measurement.pants %></td>
        <td><%= measurement.shoes %></td>
        <td><%= measurement.bodies_id %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

